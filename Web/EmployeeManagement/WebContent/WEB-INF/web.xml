<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:web="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>EmployeeListController</servlet-name>
    <servlet-class>controller.servlets.EmployeeListController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeListController</servlet-name>
    <url-pattern>/EmployeeListController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EmployeeDetailController</servlet-name>
    <servlet-class>controller.servlets.EmployeeDetailController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeDetailController</servlet-name>
    <url-pattern>/EmployeeDetailController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LandingController</servlet-name>
    <servlet-class>controller.servlets.LandingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LandingController</servlet-name>
    <url-pattern>/LandingController</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>EmployeeRegistrationController</servlet-name>
    <servlet-class>controller.servlets.EmployeeRegistrationController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EmployeeRegistrationController</servlet-name>
    <url-pattern>/EmployeeRegistrationController</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>LandingController</welcome-file>
  </welcome-file-list>
</web-app>